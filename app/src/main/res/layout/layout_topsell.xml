<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        android:layout_margin="7dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|top"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_discountOff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="start"
                    android:text="-25%"
                    android:textColor="@color/white"
                    android:padding="2dp"
                    android:background="#a80901"
                    android:textStyle="bold"
                    android:textSize="10sp" />
                <ImageView
                    android:id="@+id/prodImage"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="2dp"
                    android:scaleType="centerCrop" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="3dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_pName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/opensans_semibold"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:text="Product Name"
                    android:textColor="@color/darkGrey"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/txt_pInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="2dp"
                    android:maxLines="2"
                    android:fontFamily="@font/opensans_regular"
                    android:gravity="center|start"
                    android:text="Product Description"
                    android:textColor="@color/hintColor"
                    android:textSize="13sp"/>
                <RelativeLayout
                    android:id="@+id/rlQuan"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center|start"
                    android:gravity="start"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/txt_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:fontFamily="@font/opensans_regular"
                        android:text="1 kg"
                        android:textColor="@color/darkGrey"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13:00"
                        android:textSize="13dp"
                        android:textColor="#3c9658"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_timer_black_24dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="5dp"
                        android:padding="5dp"
                        android:textStyle="bold"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="2"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >
                            <TextView
                                android:id="@+id/currency_indicator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="center|start"
                                android:paddingEnd="2dp"

                                android:textColor="@color/darkGrey"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/txt_Pprice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="center|start"
                                android:text=""
                                android:textColor="@color/darkGrey"
                                android:textSize="15sp"/>
                            <TextView
                                android:id="@+id/currency_indicator_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_gravity="center"
                                android:fontFamily="@font/opensans_regular"
                                android:gravity="center|start"
                                android:paddingEnd="2dp"

                                android:textColor="@color/hintColor"
                                android:textSize="11sp"/>

                            <TextView
                                android:id="@+id/txt_Mrp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="2dp"
                                android:fontFamily="@font/opensans_regular"
                                android:gravity="center|start"
                                android:text=""
                                android:textColor="@color/hintColor"
                                android:textSize="11sp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="end|center">

                        <LinearLayout
                            android:visibility="visible"
                            android:id="@+id/btn_Add"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:backgroundTint="@color/green"
                            android:background="@drawable/rounded_shape"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:paddingStart="10dp"
                                android:paddingEnd="5dp"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="center"
                                android:text="ADD"
                                android:textColor="@color/white"
                                android:textSize="15sp"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:paddingStart="10dp"
                                android:layout_marginEnd="6dp"
                                android:drawableEnd="@drawable/ic_plus"></TextView>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_addQuan"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:background="@drawable/border_rounded"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/minus"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:paddingEnd="10dp"
                                android:drawableTint="#3c9658"
                                android:layout_marginStart="6dp"
                                android:drawableEnd="@drawable/ic_minus"></TextView>
                            <!--
                                                    <TextView
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="match_parent"
                                                        android:layout_gravity="center"
                                                        android:paddingStart="5dp"
                                                        android:paddingEnd="2dp"
                                                        android:layout_marginStart="5dp"
                                                        android:fontFamily="@font/opensans_semibold"
                                                        android:gravity="center"
                                                        android:text="x"
                                                        android:textColor="@color/darkGrey"
                                                        android:textSize="14sp"></TextView>
                            -->

                            <TextView
                                android:id="@+id/txtQuan"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:paddingEnd="5dp"
                                android:layout_marginEnd="5dp"
                                android:fontFamily="@font/opensans_semibold"
                                android:gravity="center"
                                android:text="1"
                                android:textColorHint="@color/hintColor"
                                android:textColor="@color/darkGrey"
                                android:textSize="15sp"></TextView>

                            <TextView
                                android:id="@+id/plus"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:paddingStart="10dp"
                                android:drawableTint="#3c9658"
                                android:layout_marginEnd="6dp"
                                android:drawableEnd="@drawable/ic_plus"></TextView>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
