        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/viewpa"
            android:visibility="visible"
            android:layout_marginTop="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#3c9658"
                android:orientation="horizontal"
                tools:ignore="InefficientWeight">

                <LinearLayout
                    android:id="@+id/my_orders"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".4"
                    android:background="#3c9658"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/order" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="@string/nav_order"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#eae3e3"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_reward"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight=".4"
                    android:background="#3c9658"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/gift" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Rewards"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#eae3e3"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_wallet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_weight=".4"
                    android:background="#3c9658"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_account_balance_wallet_black_24dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Wallet"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#eae3e3"
                        android:textSize="12sp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/my_cart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".4"
                    android:background="#3c9658"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/ic_cart" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Cart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#eae3e3"
                        android:textSize="12sp" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/loginssup"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_home"
                        android:id="@+id/image1"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />

                    <TextView
                        android:textStyle="bold"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/image1"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="Login/SignUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/nav_my_profile"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_nav_profile"
                        android:id="@+id/image2"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />

                    <TextView
                        android:textStyle="bold"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/image2"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="My Profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/nav_aboutus"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_nav_about"
                        android:id="@+id/image3"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />

                    <TextView
                        android:textStyle="bold"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/image3"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="About Us"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/nav_policy"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_nav_policy"
                        android:id="@+id/image4"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />

                    <TextView
                        android:textStyle="bold"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/image4"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="Terms &amp; Privacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/nav_contact"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_location_on_black_24dp"
                        android:id="@+id/image5"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />

                    <TextView
                        android:textStyle="bold"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/image5"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="Contact Us"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/nav_share"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_nav_share"
                        android:id="@+id/image6"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:scaleType="fitXY"/>

                    <TextView
                        android:textStyle="bold"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/image6"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="Share with Friends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/nav_logout"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_exit"
                        android:id="@+id/image7"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />

                    <TextView
                        android:textStyle="bold"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/image7"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="Logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/nav_powerd"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:id="@+id/image8"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/copy" />

                    <TextView
                        android:textStyle="bold"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/image8"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="Powered with toketani"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>
